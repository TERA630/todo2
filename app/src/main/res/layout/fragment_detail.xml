<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail">
    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="input new item"
                android:inputType="text|textPersonName"
                android:text="Item name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:visibility="visible" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/isRoutainLabel"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:text=" Routain work"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Switch
                android:id="@+id/isRoutainSw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="@android:dimen/app_icon_size" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="107dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>

            <EditText
                android:id="@+id/tagTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="enter TAG"
                android:inputType="text"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:visibility="visible" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/startDateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text|date"
                android:singleLine="true"
                android:text="----/--/--"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/startCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_day" />

            <Switch
                android:id="@+id/hasStartSw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="@android:dimen/app_icon_size" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/deadDateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text|date"
                android:singleLine="true"
                android:text="----/--/--"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/deadCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_day" />

            <Switch
                android:id="@+id/hasDeadSw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="@android:dimen/app_icon_size" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/rewardPoint"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:inputType="number"
                android:text="1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/unitLbl"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Point"

                android:visibility="visible" />
        </TableRow>

    </TableLayout>
</FrameLayout>